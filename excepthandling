try:
    x=int(input("enter a number:"))
    y=int(input("enter a number:"))
    print(x/y)

except ZeroDivisionError:
    print("division by zero not possible")

except ValueError:
    print("enter correct value not string")

except TypeError:
    print("we can't add different types ")

------------------------------------

try:
    open("./hello.txt","r")

except FileNotFoundError:
    print("pls check whether the given file exists or not")

---------------------------------------
try:
    a=int(input("enter a number:"))
    print(a**2)

except ValueError:
    print("pls enter only number not string")

-----------------------------------------------------

try:
    a=int(input("enter a:"))
    b=int(input("enter b:"))
    choice=int(input("enter your choice(1/2/3/4):"))
    if choice==1:
        print(a+b)
    elif choice==2:
        print(a-b)
    elif choice==3:
        print(a*b)
    elif choice==4:
        print(a/b)

except ZeroDivisionError:
    print("division by zero not possible")

except ValueError:
    print("pls enter value not string or anything else")

except TypeError:
    print("we can add only similar data types")

finally:
    print("program executed successfully")
